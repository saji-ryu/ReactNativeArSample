{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./typings/*", "node_modules/@types/*"]
    },
    "typeRoots": ["./typings/*", "node_modules/@types/*"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
